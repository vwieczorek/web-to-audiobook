# Server settings
APP_PORT=8142
APP_HOST=0.0.0.0

# Logging settings
APP_LOG_LEVEL=INFO
APP_LOG_FILE=logs/app.log
APP_LOG_ROTATION_MAX_BYTES=10485760  # 10MB
APP_LOG_ROTATION_BACKUP_COUNT=5

# External services API keys
APP_JINA_API_KEY=your_jina_api_key
APP_OPENAI_API_KEY=your_openai_api_key

# TTS Configuration
APP_TTS_DEFAULT_VOICE=alloy
APP_TTS_DEFAULT_MODEL=tts-1
APP_TTS_CHUNK_SIZE=4000
APP_TTS_TEMP_DIR=/tmp/tts

# HTTP Client Configuration
APP_HTTP_MAX_RETRIES=3
APP_HTTP_RETRY_DELAY=1.0
APP_HTTP_TIMEOUT=30.0

# Content Extraction Configuration
APP_JINA_BASE_URL=https://r.jina.ai/
